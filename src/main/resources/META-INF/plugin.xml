<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
    <id>kbtqa</id>

    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-name -->
    <name>KBT QA Swiss Army Knife</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor>Andrey Tyrin</vendor>

    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <depends>org.jetbrains.kotlin</depends>

    <!-- Extension points defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">
        <notificationGroup id="Stacktrace Copy" 
                          displayType="BALLOON" 
                          toolWindowId="Terminal"
                          isLogByDefault="false"/>
        <notificationGroup id="Tool Versions" 
                          displayType="BALLOON" 
                          isLogByDefault="false"/>
        <codeInsight.lineMarkerProvider
                language="TEXT"
                implementationClass="kbtqa.stacktraces.StacktraceLineMarkerProvider"/>
    </extensions>

    <extensions defaultExtensionNs="org.jetbrains.kotlin">
        <supportsKotlinPluginMode supportsK2="true" />
    </extensions>
    
    <actions>
        <action id="kbtqa.stacktraces.StacktraceCopyAction"
                class="kbtqa.stacktraces.StacktraceCopyAction"
                text="Copy Stacktrace"
                description="Copy stacktrace to clipboard">
<!--            <add-to-group group-id="ConsoleView.PopupMenu" anchor="first"/>-->
            <add-to-group group-id="ConsoleEditorPopupMenu" anchor="first"/>
            <add-to-group group-id="ToolWindowContextMenu" anchor="first"/>
            <add-to-group group-id="BuildMenu" anchor="last"/>
        </action>
        <action id="kbtqa.helpers.versions.ToolVersionsAction"
                class="kbtqa.helpers.versions.ToolVersionsAction"
                text="Show Tool Versions"
                description="Display available versions for different development tools (Kotlin, Android Gradle Plugin, etc.)">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
        </action>
        <action id="kbtqa.helpers.projectview.ConfigureVersionCatalogAction"
                class="kbtqa.helpers.projectview.ConfigureVersionCatalogAction"
                text="Configure Version Catalog"
                description="Create or validate libs.versions.toml file">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
        </action>
        <action id="kbtqa.helpers.projectview.PrepareUploadAction"
                class="kbtqa.helpers.projectview.PrepareUploadAction"
                text="Prepare Upload"
                description="Prepare project for uploading to bug tracker as reproducer (delete caches and create zip)">
            <add-to-group group-id="ToolsMenu" anchor="last"/>
            <add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
        </action>
        <group id="kbtqa.helpers.editor.QAHelpersActionGroup"
                class="kbtqa.helpers.editor.QAHelpersActionGroup"
                text="QA Helpers"
                description="Helper actions for QA tasks"
                popup="true">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
        </group>
    </actions>
</idea-plugin>